<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    window.onload = change(); 

    function change() {
        checkbox = document.getElementById("VrOgranicen");
        textbox = document.getElementById("IntervalTrajanja");
        if (checkbox.checked) {
            textbox.disabled = false;
            textbox.value = 10;
        }
        else {
            textbox.disabled = true;
            textbox.value = null;
        }
    }
</script>