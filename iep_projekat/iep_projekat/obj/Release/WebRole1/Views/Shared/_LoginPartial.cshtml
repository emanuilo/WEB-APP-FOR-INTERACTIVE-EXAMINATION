@using Microsoft.AspNet.Identity
@if (Session["ime"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + Session["ime"] + "!", "AccountDetails", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
		@Html.ActionLink("Logout", "Logout", "Home", routeValues: null, htmlAttributes: new { id = "logoutLink" })
		</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
