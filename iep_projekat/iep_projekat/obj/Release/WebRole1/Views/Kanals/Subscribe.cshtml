@model WebRole1.Models.Kanal

@{
    ViewBag.Title = "Subscribe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subscribe</h2>

<div class="row">
    <div class="col-md-8">
        @*<section id="loginForm">*@
            @using (Html.BeginForm(@*"Subscribe", "Kanals", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }*@))
            {
                @Html.AntiForgeryToken()
                <h4>Channel @ViewBag.ChannelName</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Lozinka, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @{ int num = Convert.ToInt32(@ViewBag.E); }
                            @Html.CheckBox("Evaluation")
                            @Html.Label("Yes, I want automatic evaluation for " + num + " tokens")
                        </div>
                    </div>
                </div> 
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Subscribe" class="btn btn-default" />
                    </div>
                </div>
            }
        @*</section>*@
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}